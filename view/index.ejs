<!doctype html>
<html lang="en">

<head>
	<%- include('./_partial/head', { title }); %>
</head>

<body>
	<%- include('./_partial/header', { title, icon }); %>

	<div class="px-3">
		<div class="container mx-auto -mt-24">
			<div class="card card-body bg-base-200 min-h-25 rounded-b-none">

				<div>
					<div class="relative overflow-x-auto rounded-field border border-base-content/5 bg-base-300">
						<table class="table table-zebra">
							<thead>
								<tr>
									<th scope="col">
										Game
									</th>
									<th scope="col">
										Archived
									</th>
									<th scope="col">
									</th>
								</tr>
							</thead>
							<tbody>
								<% for (game of games) { if (game.parent_game !== null) continue; %>
								<tr>
									<td class="w-0 whitespace-nowrap">
										<%= game.display_name %>
									</td>
									<td>
										<%= game.count %>
									</td>
									<td class="w-0 whitespace-nowrap">
										<a class="btn btn-sm btn-info" href="/list/<%= game.name %>">See All</a>
									</td>
								</tr>
								<% } %>
							</tbody>
						</table>
					</div>
				</div>

				<div class="flex justify-center mt-1 mb-1">
					<span class="text-xs">Page: <%= stats.timeTaken %> ms</span>
				</div>
				
			</div>
		</div>
	</div>
</body>

<%- include('./_partial/footer'); %>

</html>