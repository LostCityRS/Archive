{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext", 

    "outDir": "out",
    "baseUrl": ".",
    "paths": {
      "#/*": ["src/*"],
      "#tools/*": ["tools/*"]
    },

    "types": ["bun-types"],

    "allowJs": true,
    "checkJs": false,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  }
}
